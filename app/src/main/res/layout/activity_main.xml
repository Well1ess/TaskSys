<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bebebe"
    android:orientation="horizontal"
    tools:context="nim.shs1330.netease.com.tasksys.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_showTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="AMS Hook"/>
        <Button
            android:id="@+id/bt_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="Plugin 1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_task1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:background="#FFFFFF"
                android:text="任务一"/>
            <Button
                android:id="@+id/bt_task2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:background="#FFFFFF"
                android:text="任务二"/>
            <Button
                android:id="@+id/bt_task3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:background="#FFFFFF"
                android:text="任务三"/>
        </LinearLayout>
        <TextView
            android:text="物品——————————————"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="物品1"/>
        <Button
            android:id="@+id/bt_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="物品2"/>
        <TextView
            android:text="怪物——————————————"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_master1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="怪物1" />

        <Button
            android:id="@+id/bt_master2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="怪物2"/>
        <Button
            android:id="@+id/bt_master3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="#FFFFFF"
            android:text="怪物3"/>
        <FrameLayout
            android:id="@+id/flyt_contrainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>
    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:background="#FFFFFF"
            android:gravity="left|top"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="asdasdasdasdasdasdasdasdasdasdas"/>
    </ScrollView>

</LinearLayout>
